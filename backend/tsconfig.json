{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/types", "node_modules/@types"],
    "paths": {}
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
